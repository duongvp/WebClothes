    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Product/GetCategory',
                dataType: 'json',
                type: 'post',
                data: {

                },
                success: function (respon) {
                    let row = ``;
                    $(respon).each(function (index, item) {
                        row += `<li class="menu-parent">
                                                                <a href="/Product/ListProduct/${item.Id}" id=${item.Id} class="menu-child">${item.Name}</a>
                                                                <ul class="items-category" id="items-category-${item.Id}">
                                                                </ul>
                                                            </li>`
                    });
                    $('.list-category').append(row);
                    $('.menu-child').hover(function () {
                        id = this.id
                        $.ajax({
                            url: '/product/GetListCategory',
                            dataType: 'html',
                            type: 'post',
                            data: {
                                id: id
                            },
                            success: function (res) {
                                $('#items-category-' + id).html('');
                                $('#items-category-' + id).append(res);
                            }
                        })
                    })
                }
            })
        })
    </script>
