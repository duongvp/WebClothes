@model IEnumerable<WebClothes.Models.Product>
<div class="container search-main">
    <h4>Tìm kiếm</h4>
    <p>Kết quả tìm kiếm cho "@ViewBag.searchname"</p>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="pro1 col-lg-3 col-sm-6 px-2 pb-2 mb-2" id="pro-@item.Id">
                <a href="/Product/Detail/@item.Id">
                    <div class="box-img">
                        <img class="img img-src" src="@item.Image">
                    </div>
                    <p class="product-name">@item.Name @item.Code</p>
                    <p><span id="price">@item.Price</span>đ</p>
                </a>
                <button class="btn-quickview" data-btn="@item.Id">Xem nhanh</button>
            </div>
        }
    </div>
</div>
